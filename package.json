{
  "name": "pkg",
  "version": "4.0.0-beta.0",
  "description": "Package your Node.js project into an executable",
  "main": "lib-es5/index.js",
  "license": "MIT",
  "repository": "zeit/pkg",
  "bin": {
    "pkg": "lib-es5/bin.js"
  },
  "files": [
    "lib-es5/*.js",
    "dictionary/*.js",
    "prelude/*.js"
  ],
  "babel": {
    "plugins": [
      "transform-async-to-generator",
      "transform-runtime"
    ],
    "presets": [
      "es2015"
    ]
  },
  "dependencies": {
    "acorn": "5.0.3",
    "babel-runtime": "6.23.0",
    "chalk": "1.1.3",
    "escodegen": "1.8.1",
    "fs-extra": "3.0.1",
    "globby": "6.1.0",
    "in-publish": "2.0.0",
    "minimist": "1.2.0",
    "multistream": "2.1.0",
    "pkg-fetch": "2.3.2",
    "progress": "2.0.0",
    "resolve": "1.3.3",
    "simple-bufferstream": "1.0.0",
    "stream-meter": "1.0.4"
  },
  "devDependencies": {
    "babel-cli": "6.24.1",
    "babel-eslint": "7.2.3",
    "babel-plugin-transform-async-to-generator": "6.24.1",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-preset-es2015": "6.24.1",
    "babel-register": "6.24.1",
    "eslint-config-klopov": "0.11.0",
    "json-stable-stringify": "1.0.1",
    "mkdirp": "0.5.1",
    "rimraf": "2.6.1"
  },
  "scripts": {
    "babel": "node test/rimraf-es5.js && babel lib --out-dir lib-es5",
    "lint": "eslint-klopov . || true",
    "prepublish": "in-install || (eslint-klopov . && npm run test:nonpm && npm run babel)",
    "test": "eslint-klopov . && npm run babel && node test/test.js node0 nonpm && node test/test.js node4 nonpm && node test/test.js node7 nonpm && node test/test.js node8 nonpm && node test/test.js node6",
    "test:nonpm": "node test/test.js node6 nonpm"
  },
  "eslintConfig": {
    "extends": "klopov",
    "parser": "babel-eslint",
    "rules": {
      "max-depth": "off"
    }
  },
  "greenkeeper": {
    "emails": false,
    "ignore": [
      "pkg-fetch"
    ]
  }
}
